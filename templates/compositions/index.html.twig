{% extends 'base.html.twig' %}

{% block title %}Compositions index{% endblock %}

{% block body %}
    <h1>Compositions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for composition in compositions %}
            <tr>
                <td>{{ composition.id }}</td>
                <td>{{ composition.title }}</td>
                <td>{{ composition.status }}</td>
                <td>
                    <a href="{{ path('compositions_show', {'id': composition.id}) }}">show</a>
                    <a href="{{ path('compositions_edit', {'id': composition.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('compositions_new') }}">Create new</a>
{% endblock %}
