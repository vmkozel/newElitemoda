{% extends 'base.html.twig' %}

{% block title %}Collections index{% endblock %}

{% block body %}
    <h1>Collections index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collection in collections %}
            <tr>
                <td>{{ collection.id }}</td>
                <td>{{ collection.title }}</td>
                <td>{{ collection.status }}</td>
                <td>
                    <a href="{{ path('collections_show', {'id': collection.id}) }}">show</a>
                    <a href="{{ path('collections_edit', {'id': collection.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('collections_new') }}">Create new</a>
{% endblock %}
